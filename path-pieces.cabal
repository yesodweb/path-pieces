name:            path-pieces
version:         0.1.3
license:         BSD3
license-file:    LICENSE
author:          Michael Snoyman <michael@snoyman.com>
maintainer:      Michael Snoyman <michael@snoyman.com>
synopsis:        Components of paths.
category:        Web, Yesod
stability:       unstable
cabal-version:   >= 1.8
build-type:      Simple
extra-source-files:
  test/main.hs

library
    build-depends:   base             >= 4       && < 5
                   , text             >= 0.5     && < 0.12
                   , time
    exposed-modules: Web.PathPieces
    ghc-options:     -Wall -O2

test-suite test
    type:          exitcode-stdio-1.0
    main-is:       main.hs
    hs-source-dirs: test
    ghc-options:   -Wall
    build-depends:   HUnit
                   , hspec >= 1.3
                   , file-location >= 0.4 && < 0.5
                   , base >= 4 && < 5
                   , QuickCheck
                   , path-pieces
                   , text
                   , time

source-repository head
  type:     git
  location: https://github.com/yesodweb/path-pieces
